{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "lib": ["es6", "esnext", "dom"],
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "sourceRoot": "../src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "dist"]
}
